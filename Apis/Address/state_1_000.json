{

    "openapi": "3.0.1",

    "servers": [

      {
        "description": "API para cadastro de estados nos produtos TOTVS",    
        "url": "api.totvs.com.br"
      }

    ],

    "info": {
        "description": "API para cadastro de estado(state) para uso dos produtos TOTVS",
        "version":"1.000",
        "title":"State",
        "contact":{
            "name":"T-Talk",
            "url": "api.totvs.com.br",
            "email":"comiteintegracao@totvs.com.br"
        }
    },
    "paths":{
        "/State":{
            "get":{
                "tags":[
                    "State"
                ],
                "summary":"Retorna lista de Estados",
                "description":"Retorna lista completa de estados",
                "operationId":"getstate",
                "parameters":[
                    {
                        "$ref": "#/components/parameters/Authorization"
                    },
                    {
                        "$ref": "#/components/parameters/Order"
                    },
                    {
                        "$ref": "#/components/parameters/Page"
                    },
                    {
                        "$ref": "#/components/parameters/PageSize"
                    }
                ],
                "responses":{
                    "200":{
                        "description":"Operação realizada com suscesso",
                        "content":{
                            "application/json":{
                                "schema":{
                                    "$ref":"#/components/schemas/PagedStates"
                                }
                            }
                        }
                    }
                },
                "security":[
                    {
                        "api_key":[]
                    }
                ]
            }    
        },
        "/city/{stateId}":{
            "get":{
                "tags":[
                 "State"   
                ],
                "summary":"Retorna estado pelo seu código",
                "operationId":"getstateId",
                "parameters":[
                    {
                        "$ref": "#/components/parameters/Authorization"
                    },
                    {
                        "$ref": "#/components/parameters/StateId"
                    }
                ],
                "responses":{
                    "200":{
                        "description":"Operação realizada com suscesso",
                        "content":{
                            "application/json":{
                                "schema":{
                                    "$ref":"#/components/schemas/PagedStates"
                                }
                            }
                        }
                    },
                    "400":{
                        "description":"Estado nÃ£o localizado na base",
                        "content":{
                            "application/json":{
                                "schema":{
                                    "$ref":"#/components/schemas/ErrorModel"
                                }
                            }
                        }
                    }      
                },
                "security":[
                    {
                        "api_key":[]
                    }
                ]
            },
            "post":{
                "tags":[
                    "State"
                ],
                "summary":"Inclui um estado",
                "description":"Inclui um estado conforme dados enviados na requsição",
                "operationId":"poststateId",
                "parameters":[
                    {
                        "$ref": "#/components/parameters/Authorization"
                    },
                    {
                        "$ref": "#/components/parameters/StateId"
                    }
                ],
                "requestBody":{
                    "description":"Vendedor a ser incluÃ­do",
                    "content":{ 
                        "application/json":{
                            "schema":{
                                "$ref":"#/components/schemas/PagedStates"
                            }
                        }
                    }
                },
                "responses":{
                    "200":{
                        "description":"Operação realizada com suscesso",
                        "content":{
                            "application/json":{
                                "schema":{
                                    "$ref":"#/components/schemas/PagedStates"
                                }
                            }
                        }
                    },
                    "400":{
                        "description":"Erro durante inclusÃ£o do estado",
                        "content":{
                            "application/json":{
                                "schema":{
                                    "$ref":"#/components/schemas/ErrorModel"
                                }
                            }
                        }
                    }
                },
                "security":[
                    {
                        "api_key":[]
                    }
                ]
            },
            "put":{
                "tags":[
                    "State"
                ],
                "summary":"Altera um estado",
                "description":"Atualiza cadastro de estado conforme dados enviados na requsição",
                "operationId":"putstateId",
                "parameters":[
                    {
                        "$ref": "#/components/parameters/Authorization"
                    },
                    {
                        "$ref": "#/components/parameters/StateId"
                    }
                ],
                "requestBody":{
                    "description":"Estado a ser atualizado",
                    "content":{ 
                        "application/json":{
                            "schema":{
                                "$ref":"#/components/schemas/PagedStates"
                            }
                        }
                    }
                },
                "responses":{
                    "200":{
                        "description":"Operação realizada com suscesso",
                        "content":{
                            "application/json":{
                                "schema":{
                                    "$ref":"#/components/schemas/PagedStates"
                                }
                            }
                        }
                    },
                    "400":{
                        "description":"Erro durante a alteraÃ§Ã£o do estado",
                        "content":{
                            "application/json":{
                                "schema":{
                                    "$ref":"#/components/schemas/ErrorModel"
                                }
                            }
                        }
                    }
                },
                "security":[
                    {
                        "api_key":[]
                    }
                ]   
            },
            "delete":{
                "tags":[
                    "State"
                ],
                "summary":"Exclui um estado",
                "description":"Exclui cadastro de estado conforme dados enviados na requsição",
                "operationId":"deletestateId",
                "parameters":[
                    {
                        "$ref": "#/components/parameters/Authorization"
                    },
                    {
                        "$ref": "#/components/parameters/StateId"
                    }
                ],
                "responses":{
                    "200":{
                        "description":"Operação realizada com suscesso",
                        "content":{
                            "application/json":{
                                "schema":{
                                    "$ref":"#/components/schemas/PagedStates"
                                }
                            }
                        }
                    },
                    "400":{
                        "description":"Erro durante a exclusão do estado",
                        "content":{
                            "application/json":{
                                "schema":{
                                    "$ref":"#/components/schemas/ErrorModel"
                                }
                            }
                        }
                    }
                },
                "security":[
                    {
                        "api_key":[]
                    }
                ]   
            }
        }
    },
    "components":{
        "parameters":{
            "StateId":{
                "name":"stateId",
                "in":"path",
                "required":true,
                "description":"Identificador único do Estado",
                "schema":{
                    "type": "string"
                }   
            },
            "Authorization":{
                "name":"authorization",
                "in":"header",
                "required":true,
                "description":"Cabeçalho usado para autorização das requisições",
                "schema":{
                    "type": "string"
                }
            },
            "Order":{
                "name":"order",
                "in":"query",
                "description":"Ordenação da coleção",
                "required":false,
                "schema":{
                    "type":"array",
                    "items":{
                        "type":"string"
                    },
                    "uniqueItems":true
                }
            },
            "Page":{
                "name":"page",
                "in":"query",
                "description":"Paginação da coleção",
                "required":false,
                "schema":{
                    "type":"integer",
                    "format":"int32",
                    "default":1,
                    "minimum":1,
                    "exclusiveMinimum":false
                }
            },
            "PageSize":{
                "name":"pageSize",
                "in":"query",
                "description":"Quantidade de itens por página",
                "required":false,
                "schema":{
                    "type":"integer",
                    "format":"int32",
                    "default":20
                } 
            }
        },
        "schemas":{
            "PagedStates":{
                "type":"object",
                "allOf":[
                    {
                        "$ref":"#/components/schemas/Paging"
                    },
                    {
                        "$ref":"#/components/schemas/States"
                    }
                ]
            },
            "States":{
                "type":"object",
                "properties":{
                   "type":"array",
                   "items":{
                    "$ref":"#/components/schemas/StatesInfo"
                   }
                } 
            },
            "StatesInfo":{
                "type":"object",
                "properties":{
                    "stateId":{
                        "type":"string",
                        "description":"código do estado"
                    },
                    "stateDescription":{
                        "type":"string",
                        "description":"Descrição do estado"
                    }
                }
            },
            "Paging":{
                "type":"object",
                "properties":{
                    "hasNext":{
                        "type":"boolean",
                        "example":false
                    }
                }
            },
            "ErrorModel":{
                "type":"object",
                "required":[
                    "code",
                    "message",
                    "detailedMessage"
                ],
                "properties":{
                    "code":{
                        "type":"string",
                        "description":"código indentificador do erro."
                    },
                    "message":{
                        "type":"string",
                        "description":"Literal no idioma da requsição descrevendo o erro para o usuário."
                    },
                    "detailedMessage":{
                        "type":"string",
                        "format":"uri",
                        "description":"Mensagem técnoca e mais detalhada do erro."
                    },
                    "help":{
                        "type":"string",
                        "format":"uri",
                        "description":"URI para documentação do erro."
                    }
                }

            }
        }
    }
}